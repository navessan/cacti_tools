<query>
	<name>IPMI - Get Temperature Sensors</name>
	<description>Queries a list of temperature sensors using ipmitool</description>
	<script_path>|path_cacti|/scripts/ss_ipmitool_sensors.php</script_path>
	<script_function>ss_ipmitool_sensors</script_function>
	<script_server>php</script_server>
	<arg_prepend>|host_hostname|:ipmi_username:ipmi_password temperature</arg_prepend>
	<arg_index>index</arg_index>
	<arg_query>query</arg_query>
	<arg_get>get</arg_get>
	<output_delimeter>:</output_delimeter>
	<index_order>sensorDevice</index_order>
	<index_order_type>numeric</index_order_type>
	<index_title_format>|chosen_order_field|</index_title_format>

	<fields>
		<sensorDevice>
			<name>Thermal Sensor Device</name>
			<direction>input</direction>
			<query_name>sensorDevice</query_name>
		</sensorDevice>
		<sensorName>
			<name>Thermal Sensor Name</name>
			<direction>input</direction>
			<query_name>sensorName</query_name>
		</sensorName>

		<sensorReading>
			<name>Thermal Sensor Reading</name>
			<direction>output</direction>
			<query_name>sensorReading</query_name>
		</sensorReading>
	</fields>
</query>
